pipeline {
    agent any
    stages {
        stage ('Build App') {
            parallel {
                stage ('Build Frontend') {
                    steps {
                        build([
                            job       : 'build-frontend-multibranch',
                            wait      : true,
                        ])
                    }
                }
                stage ('Build Backend') {
                    steps {
                        build([
                            job       : 'build-backend-multibranch',
                            wait      : true
                        ])
                    }
                }
            }
        }
    }
}

